@model Omnius.Domain.Entities.Contact

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.14.0/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>
    <h3>Создание контакта</h3>
    <form class="form-horizontal" method="Post">
        <div class="form-group">
            <label class="col-sm-2 control-label">@Html.DisplayNameFor(model => model.CustomerID)</label>
            <div class="col-sm-10">
                <input asp-for="CustomerID" class="form-control" type="text" placeholder="Идентификатор потребителя">
                <span asp-validation-for="CustomerID" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">@Html.DisplayNameFor(model => model.ContactTypeID)</label>
            <div class="col-sm-10">
                <select class="form-control" asp-for="ContactTypeID" style="width:200px;">
                    <option value="1"> Мобильный телефон</option>
                    <option value="2"> Почтовый адрес</option>
                    <option value="3"> Электронная почта</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">@Html.DisplayNameFor(model => model.Value)</label>
            <div class="col-sm-10">
                <input asp-for="Value" class="form-control" type="text" placeholder="Контактная информация">
                <span asp-validation-for="Value" class="text-danger"></span>
            </div>
        </div>

        <a asp-action="List"
           class="btn btn-default btn">
            <i class="glyphicon glyphicon-chevron-left"></i>
            Вернуться в Реестр
        </a>

        <button type="submit" class="btn btn-success"><span>Создать контакт</span><i class="glyphicon glyphicon-chevron-right"></i></button>
    </form>

</div>
