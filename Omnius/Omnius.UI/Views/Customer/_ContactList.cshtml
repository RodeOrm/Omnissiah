@model IEnumerable<Omnius.Domain.Entities.Contact>
<h3></h3>
<div class="container" style="overflow-x:auto;">
    <h4>Контакты</h4>
    <table class="table table-hover">
        <thead>
                    <tr>
                        <th>
                            Тип контакта @*@Html.DisplayNameFor(model => model.ContactTypeID)*@
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Value)
                        </th>
                        <th></th>
                    </tr>
         </thead>
         <tbody>
                    @foreach (var item in Model)
                    {
                        <tr onclick="location.href = '@(Url.Action("Edit", "Contact", new { id = item.ID }))'" style="cursor: pointer;">
                            <td>
                            @*TODO: При создании админки переделать на произвольный выбор*@
                                @switch (item.ContactTypeID)
                                {
                                    case 1:
                                        <p>Мобильный телефон</p>
                                        break;
                                    case 2:
                                        <p>Почтовый адрес</p>
                                        break;
                                    case 3:
                                        <p>Электронная почта</p>
                                        break;
                                }
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Value)
                            </td>
                            <td>
                                @Html.ActionLink("Delete", "Удалить", new { id=item.ID})
                            </td>
                        </tr>
                    }
                </tbody>
     </table>
</div>